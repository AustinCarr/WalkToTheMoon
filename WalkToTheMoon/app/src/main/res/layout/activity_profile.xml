<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseProfilePic"
    android:background="@drawable/backgroundtile">


    <TextView
        android:id="@+id/text_profileName"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="40dp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:text="00000"
        android:id="@+id/text_view_steps_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:singleLine="false"
        android:textColor="#FFF"
        android:layout_below="@id/text_profileName"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="real steps"
        android:id="@+id/text_view_steps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_steps_count"
        android:textSize="30dp"
        android:singleLine="false"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true" />



    <ImageView
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:id="@+id/image_view_profile_pic"
        android:src="@drawable/user"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:rotation="-18"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:id="@+id/image_view_profile"
        android:src="@drawable/astronaut_walking"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*There are 478,000,000 steps to the moon"
        android:textColor="#FFF"
        android:id="@+id/text_view_steps_fact"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textSize="15dp"/>



</RelativeLayout>
