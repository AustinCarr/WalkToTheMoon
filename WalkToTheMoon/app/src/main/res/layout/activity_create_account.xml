<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scrollLayout"
android:layout_width="match_parent"
android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CreateAccount"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/title"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/text_nameTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_title"
            android:layout_marginTop="15dp"
            android:hint="@string/name"
            android:inputType="textEmailSubject"/>
        <LinearLayout
            android:id="@+id/layout_location"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_nameTag">
            <TextView
                android:id="@+id/text_view_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:layout_toLeftOf="@+id/spinner_states"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:id="@+id/spinner_states"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_nameTag"
                android:entries="@array/spinner_states">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_dob"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/layout_location">
            <TextView
                android:id="@+id/text_view_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dob"
                android:layout_toLeftOf="@+id/spinner_month"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:id="@+id/spinner_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/spinner_month">
            </Spinner>
            <Spinner
                android:id="@+id/spinner_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/spinner_day">
            </Spinner>
        </LinearLayout>
        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_next"
            android:layout_below="@+id/layout_dob"
            android:onClick="onNextClicked">
        </Button>
    </RelativeLayout>
</ScrollView>