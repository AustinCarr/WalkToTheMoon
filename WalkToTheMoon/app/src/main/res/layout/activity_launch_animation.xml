<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.austin.walktothemoon.LaunchAnimation"
    android:background="@drawable/backgroundtile"
    android:gravity="bottom">

    <!--

    Import Location from Database for text

    -->

    <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:background="@drawable/backgroundtile">
    </LinearLayout> -->


    <com.example.austin.walktothemoon.AspectRatioImageViewWidth
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_rocket_side"
        android:src="@drawable/rocket_side"
        android:layout_centerVertical="true"/>

    <com.example.austin.walktothemoon.AspectRatioImageViewWidth
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_rocket_side_fuel"
        android:src="@drawable/rocket_side_fuel"
        android:layout_centerVertical="true"/>

    <com.example.austin.walktothemoon.AspectRatioImageViewWidth
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#343642"
        android:id="@+id/image_view_smoke"/>

    <ImageView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:id="@+id/image_view_launch_face"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"/>

    <com.example.austin.walktothemoon.AspectRatioImageViewWidth
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_launch_face_helmet"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/launch_face"/>

    <com.example.austin.walktothemoon.AspectRatioImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_rocket_takeoff"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rocket_takeoff"
        android:translationY="-20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_dialogue1"
        android:text="@string/dialogue1"
        android:textSize="60dp"
        android:textColor="#f2f2f3"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:paddingTop="10dp"
        android:shadowColor="#282a39"
        android:shadowDy="10"
        android:shadowDx="0"
        android:shadowRadius="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_dialogue2"
        android:text="@string/dialogue2"
        android:textSize="60dp"
        android:textColor="#f2f2f3"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:paddingTop="10dp"
        android:shadowColor="#282a39"
        android:shadowDy="10"
        android:shadowDx="0"
        android:shadowRadius="1"/>

    <com.example.austin.walktothemoon.Typewriter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_user_location"
        android:text=""
        android:textSize="40dp"
        android:textColor="#f2f2f2"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:shadowColor="#343642"
        android:shadowDy="10"
        android:shadowDx="0"
        android:shadowRadius="1"/>

</RelativeLayout>
